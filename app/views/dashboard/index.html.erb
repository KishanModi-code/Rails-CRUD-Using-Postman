<h1>Dashboard</h1>

<h2>Users</h2>
<% @users.each do |user| %>
  <div>
    <%= image_tag(user.avatar_url, width: '100', height: '100') if user.avatar_url.present? %><br>
    <strong>Name:</strong> <%= user.firstname %> <%= user.lastname %><br>
    <strong>Mobile Number:</strong> <%= user.mobilenumber %><br>
  </div>
<% end %>

<h2>Posts</h2>
<% @posts.each do |post| %>
  <div>
    <%= image_tag(post.image_url, width: '200', height: '150') if post.image_url.present? %><br>
    <h3><%= post.title %></h3>
    <p><%= post.description %></p>
  </div>
<% end %>

